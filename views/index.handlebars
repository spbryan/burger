<section class="container">
    <section class="row text-center mt-1">
        <div class="col-sm-12" id="header">
            <h1>Eat Da Burger</h1>
        </div>
    </section>
    <section id="burger-input">
        <div class="row text-center">
            <div class="col-sm-12">
                <h2>Create Da Burger</h2>
                <form class="create-form" action="/api/burgers" method="POST">
                    <div class="form-group">
                        <label for="da-burger">Dream Da Burger</label><br>
                        <input type="text" id="da-burger" name="name">
                    </div>
                    <button type="submit">Cook Da Burger</button>
                </form>
            </div>
        </div>
    </section>
    <section id="burger-display">
        <div class="row text-center">
            <div class="col-sm-6">
                <h2>See Da Burger</h2>
                <ul>
                    {{#each burgers}}
                    {{#unless this.devoured}}
                    <li>
                        {{!-- {{this.id}} --}}
                        {{this.burger_name}}
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button class="btn-primary" type="submit">Eat Da Burger!</button>
                        </form>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-sm-6">
                <h2>Digest Da Burger</h2>
                <ul>
                    {{#each burgers}}
                    {{#if this.devoured}}
                    <li>
                        {{this.burger_name}}
                    </li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </section>
</section>